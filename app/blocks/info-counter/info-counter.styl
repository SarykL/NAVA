.info-counter
	position absolute
	bottom -70px
	display block
	box-shadow 0 0 30px rgba(52, 52, 52, .35)
	size(1200px, 140px)
	background #fff
	border-radius 5px
	z-index 1

	&__list
		size(100%)
		position relative

	&__item
		padding-top 15px
		padding-bottom 5px
		display inline-block
		span(1/4)
		position relative
		top 20px

		&:not(:last-child)
			border-right 1px solid rgba(113, 113, 113, .3)

	&__key
		position relative
		display block
		font-family 'Open Sans'
		font-size 30px
		text-transform uppercase
		font-weight 700
		line-height 22px
		text-align center
		color #343434

	&__value
		position relative
		margin-top 15px
		display block
		font-family 'Open Sans'
		font-size 18px
		font-weight 400
		line-height 22px
		color #717171
