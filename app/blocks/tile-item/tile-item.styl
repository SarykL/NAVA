.tile-item
	position relative
	margin-bottom 30px
	display inline-block
	overflow hidden

	&__image
		display block
		position relative
		font-size 0

	& img
		width 100%
		height 100%



	&__shadow
		position absolute
		top 0
		size(100%)
		background  linear-gradient(to top, rgba(0, 0, 0, .45) 0, rgba(0, 0, 0, 0) 42%)


	&__label
		position absolute
		top 30px
		left 30px
		font-family 'Open Sans'
		font-size 16px
		font-weight 700
		text-transform uppercase
		color white
		background-color #e7434e
		border-radius 5px

	&__title
		position absolute
		left 30px
		bottom 60px
		font-family 'Raleway'
		font-size 30px
		font-weight 400
		line-height 40px
		color white

	&_wide
		span(2/3)
		padding-x(15px)


	&_small
		span(1/3)
		padding-x(15px)


/**
 * Destination's Section specifiс tile-grid styles
 */

 .destinations-section

	& .tile-item

		&__label
			padding 15px 12px 15px 40px

			&:before
				content ''
				sprite $sailboat
				position absolute
				left 17px

		&__primary-text
			@extends .tile-item__title
			bottom 30px
			font-size 20px

		&__secondary-text
			display none

/**
 * Boats Section specifiс tile-grid styles
 */

.boats-section

	& .tile-item

		&__label
			padding-x(12px)
			padding-y(15px)

		&__primary-text
			position relative
			bottom 35px
			margin-left 50px
			display inline-block
			font-family 'Open Sans'
			font-size 16px
			font-weight 400
			color white

			&:before
				content ''
				sprite $map_marker
				position absolute
				left -20px



		&__secondary-text
			position relative
			bottom 35px
			margin-left 60px
			display inline-block
			font-family 'Open Sans'
			font-size 16px
			font-weight 400
			color white

			&:before
				content ''
				sprite $person
				position absolute
				left -30px

		&_half
			col(1/2, cycle: 2)
