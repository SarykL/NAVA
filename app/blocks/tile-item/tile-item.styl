.tile-item
	position relative
	margin-bottom 30px
	display block
	overflow hidden


	&__label
		position absolute
		top 30px
		left 30px
		padding 15px 12px 15px 40px
		font-family 'Open Sans'
		font-size 16px
		font-weight 700
		text-transform uppercase
		color white
		background-color #e7434e
		border-radius 5px

		&:before
			content ''
			sprite $sailboat
			position absolute
			left 17px

	&__title
		position absolute
		left 30px
		bottom 60px
		font-family 'Raleway'
		font-size 30px
		font-weight 400
		line-height 40px
		color white

	&__primary-text
		@extends .tile-item__title
		bottom 30px
		font-size 20px

	&__secondary-text
		display none

	&_wide
		span(2/3)


	&_small
		span(1/3)
