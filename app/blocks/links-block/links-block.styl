.links-block
	display block
	col(1/5)

	&__header
		margin-bottom 10px
		display block
		font-family 'Raleway'
		font-size 14px
		font-weight 700
		line-height 22px
		text-transform uppercase
		color white

	&__link
		font-family 'Open Sans'
		font-size 14px
		font-weight 400
		line-height 34px
		text-decoration none
		transition all .25s
		color white

		&:hover
			text-decoration underline
			color darken(#fff, 50)
